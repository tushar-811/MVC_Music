@model MVC_Music.Models.Musician

<partial name="_ViewHeading" />

<div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <hr />
     @{
        if (Model.MusicianPhoto?.Content != null)
        {
            @:<div>
                string imageBase64 = Convert.ToBase64String(Model.MusicianPhoto.Content);
                string imageSrc = string.Format("data:" + Model.MusicianPhoto.MimeType + ";base64,{0}", imageBase64);
                <img src="@imageSrc" alt="Profile Picture of @Model.Summary" title="Profile Picture of @Model.Summary" class="img-fluid rounded" />
            @:</div><hr />
           
                            
        }
    }
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MiddleName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MiddleName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneFormatted)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AgeSummary)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AgeSummary)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SIN)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SINFormatted)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Instrument)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Instrument.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Plays)
        </dt>
        <dd class="col-sm-10">
            @{
                int instCount = Model.Plays.Count;
                if (instCount > 0)
                {
                    string firstInst = Model.Plays.FirstOrDefault().Instrument.Name;
                    if (instCount > 1)
                    {
                        string instList = "";
                        var plays = Model.Plays.ToList();
                        for (int i = 1; i < instCount; i++)//Skip the first because we have it already
                        {
                            instList += plays[i].Instrument.Name + " <br />";
                        }
                        <a class="" role="button" data-bs-toggle="collapse" href="#collapseHistory@(Model.ID)"
                           aria-expanded="false" aria-controls="collapseHistory@(Model.ID)">
                            @firstInst <span class="badge bg-info">@instCount</span>
                        </a>
                        <div class="collapse" id="collapseHistory@(Model.ID)">
                            @Html.Raw(instList)
                        </div>
                    }
                    else
                    {
                        @firstInst
                    }
                }
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MusicianDocuments)
        </dt>
        <dd class="col-sm-10">
            @{
                int fileCount = Model.MusicianDocuments.Count;
                if (fileCount > 0)
                {
                    var firstFile = Model.MusicianDocuments.FirstOrDefault(); ;
                    if (fileCount > 1)
                    {
                        <a class="" role="button" data-bs-toggle="collapse" href="#collapseDocs@(Model.ID)"
                            aria-expanded="false" aria-controls="collapseDocs@(Model.ID)">
                            <span class="badge bg-info">@fileCount</span> Documents...
                        </a>
                        <div class="collapse" id="collapseDocs@(Model.ID)">
                            @{
                                foreach (var d in Model.MusicianDocuments)
                                {
                                    <a asp-action="Download" asp-route-id="@d.ID">@d.FileName</a> <br />
                                }
                            }
                        </div>
                    }
                    else
                    {
                        <a asp-action="Download" asp-route-id="@firstFile?.ID">@firstFile?.FileName</a>
                    }
                }
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="hidden" asp-for="RowVersion" />
        <input type="submit" @ViewData["CannotSave"] value="Delete" class="btn btn-danger" /> |
        <partial name="_BackToList" />
    </form>
</div>
